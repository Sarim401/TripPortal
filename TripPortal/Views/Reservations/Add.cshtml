@{
}
@model TripPortal.Models.AddReservationViewModel

<h1>Make Reservation</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Trip</label>
        <select class="form-select" asp-for="TripID">
            <option value="">Select Trip</option>
            @foreach (var trip in Model.Trips)
            {
                <option value="@Guid.Parse(trip.Value)">@trip.Text</option>
            }
        </select>
    </div>
    <div class="mt-3">
        <label class="form-label">Payment Status</label>
        <select class="form-select" asp-for="PaymentStatus">
            <option value="">Select Payment Status</option>
            <option value="Paid">Paid</option>
            <option value="Pending">Pending</option>
        </select>
    </div>
    <div class="mt-3">
        <label class="form-label">Students</label>
        <select multiple class="form-select" asp-for="SelectedStudents" asp-items="@Model.StudentList">
        </select>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Make Reservation</button>
    </div>
</form>