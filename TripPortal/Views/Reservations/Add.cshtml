@model TripPortal.Models.ViewModel.AddReservationViewModel

<h1>Make Reservation</h1>
<form asp-controller="Reservations" asp-action="Add" method="post">
    <div class="mt-3">
        <label for="SelectedStudentID">Select Student:</label>
        <select asp-for="SelectedStudentID" asp-items="@(new SelectList(Model.Students, "StudentID", "Name"))" multiple>
            <option value="">-- Select Student --</option>
        </select>
    </div>
    <div class="mt-3">
        <label for="TripID">Select Trip:</label>
        <select asp-for="TripID" asp-items="@(new SelectList(Model.Trips, "TripID", "Country"))">
            <option value="">-- Select Trip --</option>
        </select>
    </div>
    <div class="mt-3">
        <label class="form-label">ReservationDate</label>
        <input type="date" class="form-control" asp-for="ReservationDate" />
    </div>
    <div class="mt-3">
        <label class="form-label">PaymentDate</label>
        <input type="date" class="form-control" asp-for="PaymentDate" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
