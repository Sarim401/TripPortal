@{
}

@model List<TripPortal.Models.Entities.Reservation>

<h1>Reservations</h1>

<table class="table">
    <thead>
        <tr>
            <th>Reservation ID</th>
            <th>Trip ID</th>
            <th>Payment Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.ReservationID</td>
                <td>@reservation.TripID</td>
                <td>@reservation.PaymentStatus</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Reservations" asp-action="Edit" asp-route-id="@reservation.ReservationID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>