@{
}
@model List<TripPortal.Models.Entities.Student>


<h1>Students</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Pesel</th>
            <th>BirthDate</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentID</td>
                <td>@student.Name</td>
                <td>@student.Surname</td>
                <td>@student.Email</td>
                <td>@student.PESEL</td>
                <td>@student.BirthDate</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.StudentID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>