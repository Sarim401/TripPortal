@{
}
@model AddTripViewModel


<h1>Add Trip</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Country</label>
        <input type="text" class="form-control" asp-for="Country" />
    </div>
    <div class="mt-3">
        <label class="form-label">City</label>
        <input type="text" class="form-control" asp-for="City" />
    </div>
    <div class="mt-3">
        <label class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="Price" />
    </div>
    <div class="mt-3">
        <label class="form-label">StartDate</label>
        <input type="date" class="form-control" asp-for="StartDate" />
    </div>
    <div class="mt-3">
        <label class="form-label">EndDate</label>
        <input type="date" class="form-control" asp-for="EndDate" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>