@{
}
@model TripPortal.Models.AddTripViewModel

<h1>Add Trip</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Nazwa" />
    </div>
    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Opis" />
    </div>
    <div class="mt-3">
        <label class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="Cena" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>