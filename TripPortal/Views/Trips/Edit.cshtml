@{
}
@model TripPortal.Models.Entities.Trip

<h1>Edit Trip</h1>

@if (Model is null)
{
    <p>No Trip is found with this id</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="TripID" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Country</label>
            <input type="text" class="form-control" asp-for="Country" />
        </div>

        <div class="mt-3">
            <label class="form-label">City</label>
            <input type="text" class="form-control" asp-for="City" />
        </div>

        <div class="mt-3">
            <label class="form-label">Price</label>
            <input type="number" class="form-control" asp-for="Price" />
        </div>
        <div class="mt-3">
            <label class="form-label">StartDate</label>
            <input type="number" class="form-control" asp-for="StartDate" />
        </div>
        <div class="mt-3">
            <label class="form-label">EndDate</label>
            <input type="number" class="form-control" asp-for="EndDate" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Trips">Delete</button>
        </div>

    </form>
}