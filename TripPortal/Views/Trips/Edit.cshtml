@{
}
@model TripPortal.Models.Entities.Trip

<h1>Edit Trip</h1>

@if (Model is null)
{
    <p>No Trip is found with this id</p>
}
else
{


    <form method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="TripID" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Nazwa" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Opis" />
        </div>

        <div class="mt-3">
            <label class="form-label">Price</label>
            <input type="number" class="form-control" asp-for="Cena" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Trips">Delete</button>
        </div>

    </form>

}